@model Catalogue.web.Models.LoginModel

@{ 
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Connexion</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { style = "" }))
    {
        <div class=" h-screen bg-blue-50 flex justify-center items-center">
            <div class="p-6  shadow-lg rounded-lg bg-white  w-[600px]">
                <div class="space-y-3 flex flex-col items-center">
                    <img src="~/images/logo.png" alt="" class="" width="200" />
                    @Html.TextBoxFor(x => x.Username, new { @class = "pl-4 py-2 w-[90%] rounded-lg border-0 bg-gray-200", placeholder = "Username*" })
                    @Html.PasswordFor(x => x.Password, new { @class = "pl-4 py-2 w-[90%] rounded-lg border-0 bg-gray-200", placeholder = "Password*" })
                    <div class="check">
                    @Html.CheckBoxFor(x => x.RemenberMe)<span class="text-sm text-gray-500">Remenber me</span>
                </div>
                @Html.HiddenFor(x => x.ReturnUrl)
                <input type="submit" name="name" value="Enreigistrer" class="py-2 px-24 bg-blue-500 rounded-xl shadow-lg text-white font-bold cursor-pointer" style="transition:ease-in-out; -o-transition-property:all" />
                <span class="text-gray-500 text-xs">2021-2022</span>
                </div>
                
                
            </div>
        </div>
           
    }

</body>
</html>